<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                >
            <TextView
                    android:id="@+id/tv_listview_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工资"
                    android:textSize="40sp"
                    />
            <TextView
                    android:id="@+id/tv_listview_subtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_listview_type"
                    android:textSize="30sp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignBaseline="@id/tv_listview_type"
                    android:text="烟酒"
                    />
        </RelativeLayout>
        <TextView
                android:id="@+id/tv_listview_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="2015-04-09"
                android:textSize="20sp"
                />
    </LinearLayout>
    <TextView
            android:id="@+id/tv_listview_cost"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="300"
            android:textSize="30sp"/>

</LinearLayout>